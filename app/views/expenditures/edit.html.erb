<h2>Edit Expense</h2>

<%= form_with model: @expenditure do |f| %>
  <div>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
    <% @expenditure.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
    <% @expenditure.errors.full_messages_for(:amount).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :date %><br>
    <%= f.date_field :date %>
  </div>
  
  <%= f.select :budget_id, options_for_select(@budgets.map { |budget| [budget.name, budget.id] }, params[:budget_id]), { include_blank: 'Select a budget' } %>

  <%= f.hidden_field :family_id %>

  <div>
    <%= f.submit %>
  </div>
<% end %>