<h1>Edit Profile</h1>

<%= form_with model: current_user do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.submit "Save Profile" %>
  <%= link_to 'Return', profile_path %>
  <%= link_to "Delete User", user_path(current_user), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
<% end %>