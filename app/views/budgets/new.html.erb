<h2>New Budget</h2>

<%= form_with model: @budget do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
    <% @budget.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= f.label :amount %><br>
    <%= f.number_field :amount %>
    <% @budget.errors.full_messages_for(:amount).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <%= f.hidden_field :family_id %>

  <div>
    <%= f.submit %>
  </div>
<% end %>